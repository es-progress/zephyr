# GRUB menu
GRUB_TIMEOUT=10
GRUB_DISTRIBUTOR=Ubuntu
GRUB_CMDLINE_LINUX="quiet splash"
GRUB_DISABLE_RECOVERY=true
# Graphics in GRUB menu
GRUB_GFXPAYLOAD_LINUX=keep
GRUB_GFXMODE=640x480
# Enabling boot from LUKS
GRUB_ENABLE_CRYPTODISK=y
