#!/usr/bin/env bash
###############
## ES-Ubuntu ##
##           ##
## Packages  ##
## Tomb      ##
###############

# Strict mode
set -euo pipefail
IFS=$'\n\t'

# Check if not run as root
if [[ $(id -u) -eq 0 ]]; then
    echo "Don't run as root!"
    exit 1
fi

# Tomb version
tomb_version="2.9"

echo "Installing Tomb..."

# Unpack archive
tmp_dir=$(mktemp -d)
cd "${tmp_dir}"
tar -xf "${ESUBUNTU_HOME}/files/packages/Tomb-${tomb_version}.tar.gz"

# Install
cd "Tomb-${tomb_version}"
sudo make install
echo -e "\e[32m\e[1mDone\e[0m"

exit 0
