#!/usr/bin/env bash
##################
## ES-Ubuntu    ##
##              ##
## Post-install ##
## GRUB config  ##
##################

###############
## FUNCTIONS ##
###############

## Copy GRUB config file
##
## @param   $1  Global/Local
## @param   $2  Config dir
############################
_config() {
    local selector="${1:?"Selector missing"}"
    local cfg_dir="${2:?"Config dir missing"}"

    print-status "Config GRUB [${selector}]..."
    find -L "${cfg_dir}" -mindepth 1 -maxdepth 1 -type f -exec sudo cp --no-preserve=mode,ownership {} /etc/grub.d/ \;
    find -L "${cfg_dir}" -mindepth 1 -maxdepth 1 -type f -printf "%f\0" | xargs -0I {} chmod +x /etc/grub.d/{}
    print-finish
}

##################
## SCRIPT START ##
##################

# Strict mode
set -eufo pipefail
IFS=$'\n\t'

source "${PROJECT_ROOT}/bootstrap.sh"
check-root || exit 1

profile="${1:?"Profile missing"}"
shift

print-status "Config GRUB [default]..."
# Timeout
sed -i '/GRUB_TIMEOUT_STYLE=/ c GRUB_TIMEOUT_STYLE=menu' /etc/default/grub
sed -i '/GRUB_TIMEOUT=/ c GRUB_TIMEOUT=10' /etc/default/grub
# GRUB menu resolution
sed -i '/GRUB_GFXMODE/ c GRUB_GFXMODE=640x480' /etc/default/grub
# Video settings
if ! grep -qs "GRUB_GFXPAYLOAD_LINUX=keep" /etc/default/grub; then
    cat <<EOF >>/etc/default/grub

# Enable video settings
GRUB_GFXPAYLOAD_LINUX=keep
EOF
fi
print-finish

if dir=$(cfg-get "${profile}" install/grub/global.d); then
    _config global "${dir}"
fi
if dir=$(cfg-get "${profile}" install/grub/local.d); then
    _config local "${dir}"
fi

exit 0
