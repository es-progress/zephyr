#!/usr/bin/env bash
##################
## ES-Ubuntu    ##
##              ##
## Install      ##
## Post-install ##
## fstrim       ##
##################

# Strict mode
set -euo pipefail
IFS=$'\n\t'

source "${DIR_ESUBUNTU}/bootstrap.sh"
check-root || exit 1

print-status "Config fstrim service..."
mkdir -p /etc/systemd/system/fstrim.service.d
cp "${ES_INSTALL_SCRIPTS}/post-install.d/files/fstrim.conf" /etc/systemd/system/fstrim.service.d/override.conf
print-finish

print-status "Reload systemd..."
systemctl daemon-reload
print-finish

exit 0
