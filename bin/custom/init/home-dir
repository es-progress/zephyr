#!/usr/bin/env bash
###############
## ES-Ubuntu ##
##           ##
## Config    ##
## Home dir  ##
###############

# Strict mode
set -euo pipefail
IFS=$'\n\t'

# Bootstrap
source "${ESUBUNTU_HOME}/bootstrap.sh"

# Check if not run as root
check-not-root || exit 1

# Remove default dirs
print-status "Remove def dirs..."
rm -rf ~/Desktop ~/Documents ~/Downloads ~/Music
rm -rf ~/Pictures ~/Public ~/Templates ~/Videos
print-finish

# Add new dirs
if [[ -d "${ESUBUNTU_HOME}/local" ]]; then # Local dir exists
    cd "${ESUBUNTU_HOME}/local"

    if [[ -f custom/user-dirs/home-dirs ]]; then # Local dirs file exists
        print-status "Create home dirs..."

        # Remove blank lines, comments from bookmarks
        home_dirs=$(read-file-cfg custom/user-dirs/home-dirs)
        while read -r line; do
            # eval line to let the shell expand tilde and env vars
            arg=$(eval echo "${line}")
            mkdir -p "${arg}"
        done <<< "${home_dirs}"
        print-finish
    fi
fi

# Permissions
print-status "Setting permission on /home..."
sudo chown -R "${USER}:${USER}" ~
chmod -R go-rwx ~
print-finish

exit 0
