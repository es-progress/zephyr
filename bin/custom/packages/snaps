#!/usr/bin/env bash
###############
## ES-Ubuntu ##
##           ##
## Packages  ##
## snap      ##
###############

# Strict mode minus IFS
set -euo pipefail

# Bootstrap
source "${ESUBUNTU_HOME}/bootstrap.sh"

# Check if not run as root
check-not-root || exit 1

# Remove blank lines, comments from package list
snaps=$(read-file-cfg "${ESUBUNTU_HOME}/files/packages/snap")

# Parse snap list
while read -r package mode; do

    # Set options
    options=""
    [[ "${mode}" == "classic" ]] && options="--classic"

    # Install snap
    print-header "Installing ${package}..."
    sudo snap install ${options} "${package}"
    print-finish

done <<< "${snaps}"

exit 0
