#!/usr/bin/env bash
###############
## ES-Ubuntu ##
##           ##
## Packages  ##
## Tomb      ##
###############

# Tomb version
tomb_version="2.9"

# Strict mode
set -euo pipefail
IFS=$'\n\t'

# Bootstrap
source "${ESUBUNTU_HOME}/bootstrap.sh"

# Check if not run as root
check-not-root || exit 1

print-header "Install Tomb..."

# Unpack archive
tmp_dir=$(mktemp -d)
cd "${tmp_dir}"
tar -xf "${ESUBUNTU_HOME}/files/packages/Tomb-${tomb_version}.tar.gz"

# Install
cd "Tomb-${tomb_version}"
sudo make install
print-finish

exit 0
