#!/usr/bin/env bash
###############
## ES-Ubuntu ##
##           ##
## Packages  ##
## pip       ##
###############

# Strict mode
set -euo pipefail
IFS=$'\n\t'

# Bootstrap
source "${ESUBUNTU_HOME}/bootstrap.sh"

# Check if not run as root
check-not-root || exit 1

# apt update
print-header "Update apt cache..."
sudo apt update
print-finish "\e[32m\e[1mDone\e[0m"

# Install pip (Python package installer)
print-header "Installing pip3..."
sudo apt install --yes python3-pip
print-finish "\e[32m\e[1mDone\e[0m"

# Remove blank lines, comments from package list
pip_packages=$(sed -r -e '/^\s*$/ d' -e '/\s*#/ d' "${ESUBUNTU_HOME}/files/packages/pip")

# Parse package list
while read -r package; do
    # Install package
    print-header "Installing ${package}..."
    sudo pip3 install "${package}"
    print-finish "\e[32m\e[1mDone\e[0m"
done <<< "${pip_packages}"

exit 0
