#!/usr/bin/env bash
###############
## ES-Ubuntu ##
##           ##
## Config    ##
## GNOME     ##
## Wallpaper ##
###############

# Strict mode
set -eufo pipefail
IFS=$'\n\t'

source "${PROJECT_ROOT}/bin/bootstrap.sh"
check-not-root || exit 1

profile="${1:?"Profile missing"}"

if file=$(cfg-get "${profile}" gnome/wallpaper.jpg); then
    print-status "Copy wallpaper image..."
    sudo mkdir -p "${INSTALL_DIR}"
    sudo cp --no-preserve=mode,ownership "${file}" "${INSTALL_DIR}/wallpaper.jpg"
    print-finish

    print-status "Set wallpaper image..."
    dconf write /org/gnome/desktop/background/picture-uri "'file://${INSTALL_DIR}/wallpaper.jpg'"
    dconf write /org/gnome/desktop/screensaver/picture-uri "'file://${INSTALL_DIR}/wallpaper.jpg'"
    print-finish
fi

exit 0
