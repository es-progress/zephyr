#!/usr/bin/env bash
###############
## ES-Ubuntu ##
##           ##
## Config    ##
## GNOME     ##
## User dirs ##
###############

###############
## FUNCTIONS ##
###############

## Create bookmarks
##
## @param   $1  Global/Local
## @param   $2  Config file
############################
_copy-bookmarks() {
    local selector="${1:?"Selector missing"}"
    local cfg_file="${2:?"Config file missing"}"

    print-status "Add bookmarks [${selector}]..."
    for line in $(cfg-read "${cfg_file}"); do
        echo "${line}" >>"${bookmarks_file}"
    done
    print-finish
}

##################
## SCRIPT START ##
##################

# Strict mode
set -euo pipefail
IFS=$'\n\t'

source "${PROJECT_ROOT}/bootstrap.sh"
check-not-root || exit 1

profile="${1:?"Profile missing"}"

# Nautilus links
if file=$(cfg-get "${profile}" gnome/user-dirs.defaults); then
    print-status "Copy default dirs..."
    sudo cp "${file}" /etc/xdg/
    print-finish
fi
if file=$(cfg-get "${profile}" gnome/user-dirs.user); then
    print-status "Copy user dirs..."
    cp "${file}" ~/.config/
    print-finish
fi

# Bookmarks
bookmarks_file=~/.config/gtk-3.0/bookmarks
echo -n >"${bookmarks_file}"

if file=$(cfg-get "${profile}" gnome/bookmarks.global); then
    _copy-bookmarks global "${file}"
fi

if file=$(cfg-get "${profile}" gnome/bookmarks.local); then
    _copy-bookmarks local "${file}"
fi

exit 0
