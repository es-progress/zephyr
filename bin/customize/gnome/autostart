#!/usr/bin/env bash
###############
## ES-Ubuntu ##
##           ##
## Config    ##
## GNOME     ##
## Autostart ##
###############

# Strict mode
set -euo pipefail
IFS=$'\n\t'

source "${PROJECT_ROOT}/bootstrap.sh"
check-not-root || exit 1

profile="${1:?"Profile missing"}"
if dir=$(cfg-get "${profile}" gnome/autostart.d); then
    print-status "Copy autostart files..."
    mkdir -p ~/.config/autostart/
    files=$(find "${dir}" -type f)
    for file in ${files}; do
        cp -a "${file}" ~/.config/autostart
    done
    print-finish
fi

exit 0
