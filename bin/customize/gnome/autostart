#!/usr/bin/env bash
###############
## ES-Ubuntu ##
##           ##
## Config    ##
## GNOME     ##
## Autostart ##
###############

# Strict mode
set -euo pipefail
IFS=$'\n\t'

source "${PROJECT_ROOT}/bootstrap.sh"
check-not-root || exit 1

print-status "Copy autostart files..."
mkdir -p ~/.config/autostart/
files=$(find "${ES_CUSTOMIZE_CFG}/gnome/autostart.d" -type f)
for file in ${files}; do
    cp -a "${file}" ~/.config/autostart
done
print-finish

exit 0
