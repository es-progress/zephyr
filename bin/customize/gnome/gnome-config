#!/usr/bin/env bash
###############
## ES-Ubuntu ##
##           ##
## Config    ##
## GNOME     ##
###############

###############
## FUNCTIONS ##
###############

## Config GNOME
##
## @param   $1  Global/Local
## @param   $2  Config dir
############################
_config() {
    local selector="${1:?"Selector missing"}"
    local cfg_dir="${2:?"Config dir missing"}"

    print-status "Config GNOME [${selector}]..."
    find "${cfg_dir}" -type f -print0 | xargs -0 sed -e '/^#/d' -e '/^$/d' | dconf load /
    print-finish
}

##################
## SCRIPT START ##
##################

# Strict mode
set -euo pipefail
IFS=$'\n\t'

source "${PROJECT_ROOT}/bootstrap.sh"
check-not-root || exit 1

profile="${1:?"Profile missing"}"

if dir=$(cfg-get "${profile}" gnome/config.global.d); then
    _config global "${dir}"
fi

if dir=$(cfg-get "${profile}" gnome/config.local.d); then
    _config local "${dir}"
fi

if ! grep -qs "\[connectivity\]" /etc/NetworkManager/NetworkManager.conf; then
    print-status "Switch off connectivity checking..."
    echo "[connectivity]" | sudo tee -a /etc/NetworkManager/NetworkManager.conf >/dev/null
    echo "enabled=false" | sudo tee -a /etc/NetworkManager/NetworkManager.conf >/dev/null
    sudo systemctl restart NetworkManager.service
    print-finish
fi

exit 0
