#!/usr/bin/env bash
###################
## ES-Ubuntu     ##
##               ##
## Config        ##
## pulse-effects ##
###################

# Strict mode
set -euo pipefail
IFS=$'\n\t'

source "${PROJECT_ROOT}/bootstrap.sh"
check-not-root || exit 1

print-status "Copy pulse-effect presets..."
mkdir -p ~/.config/PulseEffects/output/
files=$(find "${ES_CUSTOMIZE_CFG}/pulse-effects" -type f)
for file in ${files}; do
    cp "${file}" ~/.config/PulseEffects/output/
done
print-finish

exit 0
