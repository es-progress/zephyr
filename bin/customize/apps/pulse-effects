#!/usr/bin/env bash
###################
## ES-Ubuntu     ##
##               ##
## Config        ##
## Pulse-effects ##
###################

###############
## FUNCTIONS ##
###############

## Copy presets
##
## @param   $1  Global/Local
## @param   $2  Config dir
############################
_copy-presets() {
    local selector="${1:?"Selector missing"}"
    local cfg_dir="${2:?"Config dir missing"}"

    print-status "Copy pulse-effect presets [${selector}]..."
    mkdir -p ~/.config/PulseEffects/output/
    find "${cfg_dir}" -type f -exec cp {} ~/.config/PulseEffects/output/ \;
    print-finish
}

##################
## SCRIPT START ##
##################

# Strict mode
set -euo pipefail
IFS=$'\n\t'

source "${PROJECT_ROOT}/bootstrap.sh"
check-not-root || exit 1

profile="${1:?"Profile missing"}"

if dir=$(cfg-get "${profile}" apps/pulse-effects/global); then
    _copy-presets global "${dir}"
fi
if dir=$(cfg-get "${profile}" apps/pulse-effects/local); then
    _copy-presets local "${dir}"
fi

exit 0
