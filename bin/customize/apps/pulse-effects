#!/usr/bin/env bash
###################
## Zephyr        ##
##               ##
## Config        ##
## Pulse-effects ##
###################

###############
## FUNCTIONS ##
###############

## Copy presets
##
## @param   $1  Global/Local
## @param   $2  Config dir
############################
_copy-presets() {
    local selector="${1:?"Selector missing"}"
    local cfg_dir="${2:?"Config dir missing"}"

    print-status Copy pulse-effect presets "[${selector}]..."
    mkdir -p ~/.config/PulseEffects/output/
    find -L "${cfg_dir}" -type f -exec cp --no-preserve=mode,ownership {} ~/.config/PulseEffects/output/ \;
    print-finish
}

##################
## SCRIPT START ##
##################

# Strict mode
set -eufo pipefail
IFS=$'\n\t'

source "${PROJECT_ROOT}/bin/bootstrap.sh"
check-not-root

profile="${1:?"Profile missing"}"

print-status Add apt repo: ppa:mikhailnov/pulseeffects...
sudo add-apt-repository --yes --no-update ppa:mikhailnov/pulseeffects
print-finish

install-apt pulseaudio pulseeffects

# shellcheck disable=SC2310,SC2311
if dir=$(cfg-get "${profile}" apps/pulse-effects/global.d); then
    _copy-presets global "${dir}"
fi
# shellcheck disable=SC2310,SC2311
if dir=$(cfg-get "${profile}" apps/pulse-effects/local.d); then
    _copy-presets local "${dir}"
fi

exit 0
