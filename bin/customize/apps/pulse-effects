#!/usr/bin/env bash
###################
## ES-Ubuntu     ##
##               ##
## Config        ##
## pulse-effects ##
###################

# Strict mode
set -euo pipefail
IFS=$'\n\t'

# Bootstrap
source "${ESUBUNTU_HOME}/bootstrap.sh"

# Check if not run as root
check-not-root || exit 1

# Config
print-status "Copy pulse-effect presets..."
mkdir -p ~/.config/PulseEffects/output/
cp ${ESUBUNTU_HOME}/custom/pulse-effects/* ~/.config/PulseEffects/output/
print-finish

exit 0
