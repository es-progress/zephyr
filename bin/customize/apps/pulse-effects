#!/usr/bin/env bash
###################
## ES-Ubuntu     ##
##               ##
## Config        ##
## Pulse-effects ##
###################

# Strict mode
set -euo pipefail
IFS=$'\n\t'

source "${PROJECT_ROOT}/bootstrap.sh"
check-not-root || exit 1

profile="${1:?"Profile missing"}"
if dir=$(cfg-get "${profile}" apps/pulse-effects); then
    print-status "Copy pulse-effect presets..."
    mkdir -p ~/.config/PulseEffects/output/
    files=$(find "${dir}" -type f)
    for file in ${files}; do
        cp "${file}" ~/.config/PulseEffects/output/
    done
    print-finish
fi

exit 0
