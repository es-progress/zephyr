#!/usr/bin/env bash
###################
## ES-Ubuntu     ##
##               ##
## Config        ##
## pulse-effects ##
###################

# Strict mode
set -euo pipefail
IFS=$'\n\t'

# Bootstrap
source "${ESUBUNTU_HOME}/bootstrap.sh"

# Check if not run as root
check-not-root || exit 1

# Config
print-status "Copy pulse-effect presets..."
mkdir -p ~/.config/PulseEffects/output/
cp ${CUSTOMIZE_CFG_DIR}/pulse-effects/* ~/.config/PulseEffects/output/
print-finish

# Local configs
if [[ -d "${ESUBUNTU_HOME}/local" ]]; then # Local dir exists
    cd "${ESUBUNTU_HOME}/local"

    if [[ -d config/customize/pulse-effects ]]; then # Local config exists
        print-status "Copy local pulse-effect presets..."
        cd config/customize/pulse-effects
        cp ./* ~/.config/PulseEffects/output/
        print-finish
    fi
fi

exit 0
