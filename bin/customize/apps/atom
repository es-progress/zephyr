#!/usr/bin/env bash
###############
## ES-Ubuntu ##
##           ##
## Config    ##
## Atom      ##
###############

###############
## FUNCTIONS ##
###############

## Install Atom packages
##
## @param   $1  Global/Local
## @param   $2  Config file
############################
_install-packages() {
    local selector="${1:?"Selector missing"}"
    local cfg_file="${2:?"Config file missing"}"

    print-header "Install Atom packages [${selector}]..."
    for package in $(cfg-read "${cfg_file}" atom-packages); do
        apm install "${package}"
    done
    print-finish
}

## Copy config files
##
## @param   $1  Global/Local
## @param   $2  Config dir
############################
_config() {
    local selector="${1:?"Selector missing"}"
    local cfg_dir="${2:?"Config dir missing"}"

    print-status "Copy Atom config [${selector}]..."
    find -L "${cfg_dir}" -mindepth 1 -maxdepth 1 -exec cp -r --no-preserve=mode,ownership {} ~/.atom/ \;
    print-finish
}

##################
## SCRIPT START ##
##################

# Strict mode
set -eufo pipefail
IFS=$'\n\t'

source "${PROJECT_ROOT}/bootstrap.sh"
check-not-root || exit 1

profile="${1:?"Profile missing"}"

print-header "Add Atom GPG key..."
curl -s --location --url https://packagecloud.io/AtomEditor/atom/gpgkey | sudo apt-key add -
print-finish

print-header "Add Atom repo..."
sudo add-apt-repository --yes "deb [arch=amd64] https://packagecloud.io/AtomEditor/atom/any/ any main"
print-finish

print-header "Install Atom..."
sudo apt-get install --yes --no-install-recommends atom
print-finish

if file=$(cfg-get "${profile}" apps/global.cfg); then
    _install-packages global "${file}"
fi
if file=$(cfg-get "${profile}" apps/local.cfg); then
    _install-packages local "${file}"
fi
if file=$(cfg-get "${profile}" apps/atom/global.d); then
    _config global "${file}"
fi
if file=$(cfg-get "${profile}" apps/atom/local.d); then
    _config local "${file}"
fi

exit 0
