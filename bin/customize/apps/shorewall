#!/usr/bin/env bash
###############
## ES-Ubuntu ##
##           ##
## Config    ##
## shorewall ##
###############

# Strict mode
set -euo pipefail
IFS=$'\n\t'

source "${DIR_ESUBUNTU}/bootstrap.sh"
check-not-root || exit 1

# Get default interface
iface=$(ip route | awk '/^default/{print $5}')

print-status "Copy global shorewall config..."
sudo cp "${ES_CUSTOMIZE_CFG}"/shorewall/* /etc/shorewall/
sudo sed -i "s/{{ interface }}/${iface}/g" /etc/shorewall/interfaces
print-finish

if [[ -d "${ES_CFG_LOCAL}/config/customize/shorewall" ]]; then
    print-status "Copy local shorewall config..."
    sudo cp "${ES_CFG_LOCAL}"/config/customize/shorewall/* /etc/shorewall/
    print-finish
fi

print-header "Starting shorewall..."
sudo systemctl enable shorewall.service
sudo systemctl start shorewall.service
sudo shorewall save
print-finish

exit 0
