#!/usr/bin/env bash
###############
## ES-Ubuntu ##
##           ##
## Packages  ##
## Ansible   ##
###############

# Strict mode
set -euo pipefail
IFS=$'\n\t'

source "${DIR_ESUBUNTU}/bootstrap.sh"
check-not-root || exit 1

print-header "Install Ansible collections..."
ansible-galaxy install -r "${ES_CUSTOMIZE_CFG}/ansible/ansible-collections.yml"
print-finish

exit 0
