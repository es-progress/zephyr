#!/usr/bin/env bash
###############
## ES-Ubuntu ##
##           ##
## Config    ##
## JMeter    ##
###############

# Strict mode
set -euo pipefail
IFS=$'\n\t'

source "${PROJECT_ROOT}/bootstrap.sh"
check-not-root || exit 1

# Options
profile="${1:?"Profile missing"}"
version=
url=
checksum=

# Read config file, get options
if file=$(cfg-get "${profile}" apps/jmeter/global.cfg); then
    cfg-eval "${file}"
fi
if file=$(cfg-get "${profile}" apps/jmeter/local.cfg); then
    cfg-eval "${file}"
fi

[[ -z "${version}" ]] && exit 1
[[ -z "${url}" ]] && exit 1
[[ -z "${checksum}" ]] && exit 1

print-header "Install jmeter..."
# Download tar
tmp_file=$(mktemp)
curl --progress-bar -o "${tmp_file}" --url "${url}"
hash=$(sha512sum "${tmp_file}" | cut -d" " -f1)
[[ "${hash}" != "${checksum}" ]] && error-exit "Bad checksum, exiting"
# Unpack archive
sudo tar -C /opt -xf "${tmp_file}"
sudo rm -rf /opt/jmeter
sudo mv "/opt/apache-jmeter-${version}" /opt/jmeter
sudo chown root:users -R /opt/jmeter
sudo chmod g+w -R /opt/jmeter
print-finish

exit 0
