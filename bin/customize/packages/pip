#!/usr/bin/env bash
############
## Zephyr ##
##        ##
## Config ##
## pip    ##
############

###############
## FUNCTIONS ##
###############

## Install pip packages
##
## @param   $1  Global/Local
## @param   $2  Config file
############################
_install() {
    local selector="${1:?Selector missing}"
    local cfg_file="${2:?Config file missing}"

    print-header Install pip packages "[${selector}]..."
    sudo "python${python_version}" -m pip install \
        --upgrade \
        --upgrade-strategy eager \
        --no-warn-script-location \
        --root-user-action ignore \
        -r "${cfg_file}"
    print-finish
}

##################
## SCRIPT START ##
##################

# Strict mode
set -eufo pipefail
IFS=$'\n\t'

source "${PROJECT_ROOT}/bin/bootstrap.sh"
check-not-root

profile="${1:?Profile missing}"
python_version=

# Read config file, get options
# shellcheck disable=SC2310,SC2311
if file=$(cfg-get "${profile}" packages/global.cfg); then
    cfg-eval "${file}" managers
fi
# shellcheck disable=SC2310,SC2311
if file=$(cfg-get "${profile}" packages/local.cfg); then
    cfg-eval "${file}" managers
fi

[[ -z "${python_version}" ]] && error-exit Missing python_version

install-apt curl "python${python_version}" python3-distutils

print-header Install pip...
tmp_file=$(mktemp)
curl --disable --progress-bar --location -o "${tmp_file}" --url https://bootstrap.pypa.io/get-pip.py
sudo "python${python_version}" "${tmp_file}" --root-user-action ignore --target "$("python${python_version}" -c 'import sys; print(sys.path[-1])' || true)"
sudo "python${python_version}" -m pip install --upgrade pip --root-user-action ignore
print-finish

# Workaround for Ubuntu 20.04 to solve pip error:
# Cannot uninstall PyYaml, it is a distutils installed project...
# QUICKFIX: Remove after Ubuntu 22.04 upgrade
print-header Reinstall PyYAML...
sudo "python${python_version}" -m pip install --root-user-action ignore --ignore-installed PyYAML
print-finish

# shellcheck disable=SC2310,SC2311
if file=$(cfg-get "${profile}" packages/pip.global); then
    _install global "${file}"
fi
# shellcheck disable=SC2310,SC2311
if file=$(cfg-get "${profile}" packages/pip.local); then
    _install local "${file}"
fi

exit 0
