#!/usr/bin/env bash
###############
## ES-Ubuntu ##
##           ##
## Packages  ##
## pip       ##
###############

# Strict mode
set -euo pipefail
IFS=$'\n\t'

source "${DIR_ESUBUNTU}/bootstrap.sh"
check-not-root || exit 1

print-header "Install pip3 (python package manager)..."
sudo apt install --yes --no-install-recommends python3-pip
print-finish

print-header "Install pip packages..."
pip install --upgrade --no-warn-script-location --progress-bar ascii -r "${ES_CUSTOMIZE_CFG}/packages/pip"
print-finish

exit 0
