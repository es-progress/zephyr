#!/usr/bin/env bash
###############
## ES-Ubuntu ##
##           ##
## Config    ##
## pip       ##
###############

# Strict mode
set -euo pipefail
IFS=$'\n\t'

source "${PROJECT_ROOT}/bootstrap.sh"
check-not-root || exit 1

profile="${1:?"Profile missing"}"

print-header "Install pip3 (python package manager)..."
sudo apt-get install --yes --no-install-recommends python3-pip
print-finish

if file=$(cfg-get "${profile}" packages/pip); then
    print-header "Install pip packages..."
    pip install --upgrade --no-warn-script-location --progress-bar ascii -r "${file}"
    print-finish
fi

exit 0
