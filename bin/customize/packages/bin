#!/usr/bin/env bash
###############
## ES-Ubuntu ##
##           ##
## Packages  ##
## Shell bin ##
###############

# Strict mode
set -euo pipefail
IFS=$'\n\t'

source "${DIR_ESUBUNTU}/bootstrap.sh"
check-not-root || exit 1

print-status "Copy vendor shell programs..."
sudo mkdir -p "${GLOBAL_BIN}"
cd "${ES_CUSTOMIZE_FILES}/shell/vendor"
for file in *; do
    sudo cp "${file}" "${GLOBAL_BIN}"
    sudo chown root:root "${GLOBAL_BIN}/${file}"
    sudo chmod =0755 "${GLOBAL_BIN}/${file}"
done
print-finish

exit 0
