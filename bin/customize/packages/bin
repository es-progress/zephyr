#!/usr/bin/env bash
###############
## ES-Ubuntu ##
##           ##
## Config    ##
## Shell bin ##
###############

###############
## FUNCTIONS ##
###############

## Install shell binaries
##
## @param   $1  Global/Local
## @param   $2  Config file
############################
_install() {
    local selector="${1:?"Selector missing"}"
    local cfg_file="${2:?"Config file missing"}"

    print-header "Install vendor shell programs [${selector}]..."
    sudo mkdir -p "${GLOBAL_BIN}"
    for line in $(cfg-read "${file}" bin); do
        IFS=$' \t' read -r name url checksum <<< "${line}"

        print-header "Install ${name}..."

        # Check if already installed
        if [[ -e "${GLOBAL_BIN}/${name}" ]]; then
            hash=$(sha256sum "${GLOBAL_BIN}/${name}" | cut -d" " -f1)
            if [[ "${hash}" == "${checksum}" ]]; then
                print-finish "Already installed, skipped."
                continue
            fi
        fi

        tmp_file=$(mktemp)
        curl --progress-bar --location -o "${tmp_file}" --url "${url}"

        if [[ -n "${checksum}" ]]; then
            hash=$(sha256sum "${tmp_file}" | cut -d" " -f1)
            if [[ "${hash}" != "${checksum}" ]]; then
                print-error "Bad checksum for ${name}, skipping."
                continue
            fi
        fi

        sudo mv "${tmp_file}" "${GLOBAL_BIN}/${name}"
        sudo chown root:root "${GLOBAL_BIN}/${name}"
        sudo chmod =0755 "${GLOBAL_BIN}/${name}"
        print-finish
    done
    print-finish
}

##################
## SCRIPT START ##
##################

# Strict mode
set -euo pipefail
IFS=$'\n\t'

source "${PROJECT_ROOT}/bootstrap.sh"
check-not-root || exit 1

profile="${1:?"Profile missing"}"

if file=$(cfg-get "${profile}" packages/global.cfg); then
    _install global "${file}"
fi
if file=$(cfg-get "${profile}" packages/local.cfg); then
    _install local "${file}"
fi

exit 0
