#!/usr/bin/env bash
###############
## ES-Ubuntu ##
##           ##
## Packages  ##
## snap      ##
###############

# Strict mode minus IFS
set -euo pipefail

# Bootstrap
source "${ESUBUNTU_HOME}/bootstrap.sh"

# Check if not run as root
check-not-root || exit 1

print-header "Install snapd..."
sudo apt update
sudo apt install --yes snapd
print-finish

snaps=$(read-file-cfg "${CUSTOMIZE_CFG_DIR}/packages/snap")
while read -r package mode; do

    # Set options
    options=""
    [[ "${mode}" == "classic" ]] && options="--classic"

    # Install snap
    print-header "Installing ${package}..."
    if [[ -n "${options}" ]]; then
        sudo snap install "${package}" "${options}"
    else
        sudo snap install "${package}"
    fi
    print-finish
done <<< "${snaps}"

exit 0
