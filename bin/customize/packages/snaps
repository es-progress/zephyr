#!/usr/bin/env bash
###############
## ES-Ubuntu ##
##           ##
## Packages  ##
## snap      ##
###############

# Strict mode minus IFS
set -euo pipefail

source "${DIR_ESUBUNTU}/bootstrap.sh"
check-not-root || exit 1

print-header "Install snapd..."
sudo apt update
sudo apt install --yes --no-install-recommends snapd
print-finish

snaps=$(read-file-cfg "${ES_CUSTOMIZE_CFG}/packages/snap")
while read -r package mode; do
    # Set options
    options=""
    [[ "${mode}" == "classic" ]] && options="--classic"

    # Install snap
    print-header "Installing ${package}..."
    if [[ -n "${options}" ]]; then
        sudo snap install "${package}" "${options}"
    else
        sudo snap install "${package}"
    fi
    print-finish
done <<< "${snaps}"

exit 0
