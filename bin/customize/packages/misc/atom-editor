#!/usr/bin/env bash
###############
## ES-Ubuntu ##
##           ##
## Packages  ##
## Atom      ##
###############

# Strict mode
set -euo pipefail
IFS=$'\n\t'

source "${DIR_ESUBUNTU}/bootstrap.sh"
check-not-root || exit 1

print-header "Add Atom GPG key..."
curl -s --location --url https://packagecloud.io/AtomEditor/atom/gpgkey | sudo apt-key add -
print-finish

print-header "Add Atom repo..."
sudo add-apt-repository --yes "deb [arch=amd64] https://packagecloud.io/AtomEditor/atom/any/ any main"
print-finish

print-header "Install Atom..."
sudo apt-get install --yes --no-install-recommends atom
print-finish

print-header "Install base Atom packages..."
apm install sync-settings
apm install sync-settings-git-location
print-finish

if [[ -f "${ES_CFG_LOCAL}/config/customize/packages/atom/config.cson" ]]; then
    print-status "Copy local config file..."
    cp "${ES_CFG_LOCAL}/config/customize/packages/atom/config.cson" ~/.atom
    print-finish
fi

exit 0
