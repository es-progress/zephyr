#!/usr/bin/env bash
###############
## ES-Ubuntu ##
##           ##
## Packages  ##
## Atom      ##
###############

# Strict mode
set -euo pipefail
IFS=$'\n\t'

source "${DIR_ESUBUNTU}/bootstrap.sh"
check-not-root || exit 1

print-header "Add Atom repo..."
wget -qO - https://packagecloud.io/AtomEditor/atom/gpgkey | sudo apt-key add -
sudo bash -c 'echo "deb [arch=amd64] https://packagecloud.io/AtomEditor/atom/any/ any main" > /etc/apt/sources.list.d/atom.list'
print-finish

print-header "Install Atom..."
sudo apt-get update
sudo apt install --yes --no-install-recommends atom
print-finish

print-header "Install base Atom packages..."
apm install sync-settings
apm install sync-settings-git-location
print-finish

if [[ -f "${ES_CFG_LOCAL}/config/customize/packages/atom/config.cson" ]]; then
    print-status "Copy local config file..."
    cp "${ES_CFG_LOCAL}/config/customize/packages/atom/config.cson" ~/.atom
    print-finish
fi

exit 0
