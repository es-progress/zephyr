#!/usr/bin/env bash
###############
## ES-Ubuntu ##
##           ##
## Packages  ##
## Local     ##
###############

# Strict mode
set -euo pipefail
IFS=$'\n\t'

source "${DIR_ESUBUNTU}/bootstrap.sh"
check-not-root || exit 1

if [[ -d "${ES_CFG_LOCAL}/config/customize/packages/local" ]]; then
    cd "${ES_CFG_LOCAL}/config/customize/packages/local"
    run-parts --report .
fi

exit 0
