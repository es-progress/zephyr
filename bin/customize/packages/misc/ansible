#!/usr/bin/env bash
###############
## ES-Ubuntu ##
##           ##
## Packages  ##
## Ansible   ##
###############

# Strict mode
set -euo pipefail
IFS=$'\n\t'

source "${ESUBUNTU_HOME}/bootstrap.sh"
check-not-root || exit 1

print-header "Add Ansible repo..."
sudo add-apt-repository --yes ppa:ansible/ansible
print-finish

print-header "Install Ansible..."
sudo apt install --yes ansible
print-finish

print-header "Install Ansible collections..."
collections=$(read-file-cfg "${ES_CFG_CUSTOMIZE}/packages/ansible")
while read -r collection; do
    ansible-galaxy collection install "${collection}"
done <<< "${collections}"
print-finish

exit 0
