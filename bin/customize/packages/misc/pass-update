#!/usr/bin/env bash
#################
## ES-Ubuntu   ##
##             ##
## Packages    ##
## pass-update ##
#################

# pass-update version
pass_version="v2.1"

# Strict mode
set -euo pipefail
IFS=$'\n\t'

source "${DIR_ESUBUNTU}/bootstrap.sh"
check-not-root || exit 1

print-header "Install pass-update..."
tmp_dir=$(mktemp -d)
cd "${tmp_dir}"
git clone https://github.com/roddhjav/pass-update.git
cd pass-update
git checkout "${pass_version}"
sudo make install
print-finish

exit 0
