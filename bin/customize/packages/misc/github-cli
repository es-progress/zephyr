#!/usr/bin/env bash
################
## ES-Ubuntu  ##
##            ##
## Packages   ##
## Github CLI ##
################

# gh
url="https://github.com/cli/cli/releases/download/v2.2.0/gh_2.2.0_linux_amd64.deb"
checksum="effdb6df788f1e7af43857bda377c2c86d6905e0fa2b19c74c5552059df65830"

# Strict mode
set -euo pipefail
IFS=$'\n\t'

source "${DIR_ESUBUNTU}/bootstrap.sh"
check-not-root || exit 1

print-header "Install github-cli..."
# Download deb
tmp_file=$(mktemp)
curl --progress-bar --location -o "${tmp_file}" --url "${url}"
hash=$(sha256sum "${tmp_file}" | cut -d" " -f1)
[[ "${hash}" != "${checksum}" ]] && error-exit "Bad checksum, exiting"
# Install
sudo dpkg -i "${tmp_file}"
print-finish

exit 0
