#!/usr/bin/env bash
################
## ES-Ubuntu  ##
##            ##
## Packages   ##
## Github CLI ##
################

# gh
url="https://github.com/cli/cli/releases/download/v2.0.0/gh_2.0.0_linux_amd64.deb"
checksum="7108b8405dc88ec83e351646b7804315e0be51714aa8c759c6b57221c8310eb2"

# Strict mode
set -euo pipefail
IFS=$'\n\t'

source "${DIR_ESUBUNTU}/bootstrap.sh"
check-not-root || exit 1

print-header "Install github-cli..."
# Download deb
tmp_file=$(mktemp)
curl --progress-bar --location -o "${tmp_file}" --url "${url}"
hash=$(sha256sum "${tmp_file}" | cut -d" " -f1)
if [[ "${hash}" != "${checksum}" ]]; then
    print-error "Bad checksum, exiting"
    exit 1
fi
# Install
sudo dpkg -i "${tmp_file}"
print-finish

exit 0
