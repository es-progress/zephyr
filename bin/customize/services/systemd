#!/usr/bin/env bash
###############
## ES-Ubuntu ##
##           ##
## Services  ##
## Systemd   ##
###############

# Strict mode
set -euo pipefail
IFS=$'\n\t'

source "${PROJECT_ROOT}/bootstrap.sh"
check-not-root || exit 1

profile="${1:?"Profile missing"}"
if file=$(cfg-get "${profile}" services/systemd/resolved.conf); then
    print-status "Config systemd-resolved service..."
    sudo mkdir -p /etc/systemd/resolved.conf.d/
    sudo cp "${file}" /etc/systemd/resolved.conf.d/esubuntu.conf
    sudo chmod 0644 /etc/systemd/resolved.conf.d/esubuntu.conf
    sudo systemctl daemon-reload
    sudo systemctl restart systemd-resolved.service
    print-finish
fi

exit 0
