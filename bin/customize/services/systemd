#!/usr/bin/env bash
###############
## ES-Ubuntu ##
##           ##
## Services  ##
## Systemd   ##
###############

# Strict mode
set -euo pipefail
IFS=$'\n\t'

source "${DIR_ESUBUNTU}/bootstrap.sh"
check-not-root || exit 1

if [[ -f "${ES_CFG_LOCAL}/config/customize/services/systemd/resolved" ]]; then
    print-status "Config systemd-resolved service..."
    sudo mkdir -p /etc/systemd/resolved.conf.d/
    sudo cp "${ES_CFG_LOCAL}/config/customize/services/systemd/resolved" /etc/systemd/resolved.conf.d/esubuntu.conf
    sudo chmod 0644 /etc/systemd/resolved.conf.d/esubuntu.conf
    sudo systemctl daemon-reload
    sudo systemctl restart systemd-resolved.service
    print-finish
fi

exit 0
