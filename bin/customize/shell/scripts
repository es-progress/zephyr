#!/usr/bin/env bash
###############
## ES-Ubuntu ##
##           ##
## Config    ##
## Scripts   ##
###############

# Strict mode
set -euo pipefail
IFS=$'\n\t'

source "${ESUBUNTU_HOME}/bootstrap.sh"
check-not-root || exit 1

print-status "Copy global shell scripts..."
sudo mkdir -p "${GLOBAL_BIN}"
cd "${CUSTOMIZE_FILES_DIR}/shell/es-progress/bin"
for file in *; do
    sudo cp "${file}" "${GLOBAL_BIN}"
    sudo chown root:root "${GLOBAL_BIN}/${file}"
    sudo chmod =0755 "${GLOBAL_BIN}/${file}"
done
print-finish

print-status "Copy global shell library..."
sudo mkdir -p "${GLOBAL_LIB}"
cd "${CUSTOMIZE_FILES_DIR}/shell/es-progress/lib"
for file in *; do
    sudo cp "${file}" "${GLOBAL_LIB}"
    sudo chown root:root "${GLOBAL_LIB}/${file}"
    sudo chmod =0644 "${GLOBAL_LIB}/${file}"
done
print-finish

if [[ -d "${ES_LOCAL_CONFIG}" ]]; then
    cd "${ES_LOCAL_CONFIG}"
    if [[ -d files/shell ]]; then
        print-status "Copy local shell scripts..."
        mkdir -p "${LOCAL_BIN}"
        cd files/shell
        for file in *; do
            cp -a "${file}" "${LOCAL_BIN}"
        done
        print-finish
    fi
fi

exit 0
