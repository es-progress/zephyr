#!/usr/bin/env bash
###############
## ES-Ubuntu ##
##           ##
## Config    ##
## Bash      ##
###############

# Strict mode
set -euo pipefail
IFS=$'\n\t'

source "${PROJECT_ROOT}/bootstrap.sh"
check-not-root || exit 1

profile="${1:?"Profile missing"}"

shopt -s dotglob

if dir=$(cfg-get "${profile}" shell/bash/global); then
    print-status "Copy global Bash files..."
    files=$(find "${dir}" -mindepth 1 -maxdepth 1)
    for file in ${files}; do
        sudo cp -r "${file}" /root/
        sudo cp -r "${file}" /etc/skel/
        cp -r "${file}" ~
    done
    print-finish
fi

if dir=$(cfg-get "${profile}" shell/bash/root); then
    print-status "Copy root Bash files..."
    files=$(find "${dir}" -mindepth 1 -maxdepth 1)
    for file in ${files}; do
        sudo cp -r "${file}" /root/
    done
    print-finish
fi

if dir=$(cfg-get "${profile}" shell/bash/local); then
    print-status "Copy local Bash files..."
    files=$(find "${dir}" -mindepth 1 -maxdepth 1)
    for file in ${files}; do
        cp -r "${file}" ~
    done
    print-finish
fi

if [[ -e ~/.bash_history ]]; then
    print-status "Remove Bash history..."
    rm ~/.bash_history
    print-finish
fi

exit 0
