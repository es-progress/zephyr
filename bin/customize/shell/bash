#!/usr/bin/env bash
###############
## ES-Ubuntu ##
##           ##
## Config    ##
## Bash      ##
###############

# Strict mode
set -euo pipefail
IFS=$'\n\t'

source "${DIR_ESUBUNTU}/bootstrap.sh"
check-not-root || exit 1

shopt -s dotglob

print-status "Copy global Bash files..."
for file in "${ES_CUSTOMIZE_CFG}"/bash/global/*; do
    sudo cp -r "${file}" /root/
    sudo cp -r "${file}" /etc/skel/
    cp -r "${file}" ~
done
print-finish

print-status "Copy root Bash files..."
for file in "${ES_CUSTOMIZE_CFG}"/bash/root/*; do
    sudo cp -r "${file}" /root/
done
print-finish

if [[ -d "${ES_CFG_LOCAL}/config/customize/bash" ]]; then
    print-status "Copy local Bash files..."
    for file in "${ES_CFG_LOCAL}"/config/customize/bash/*; do
        cp -a "${file}" ~
    done
    print-finish
fi

exit 0
