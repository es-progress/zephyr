#!/usr/bin/env bash
###############
## ES-Ubuntu ##
##           ##
## Config    ##
## Bash      ##
###############

# Strict mode
set -euo pipefail
IFS=$'\n\t'

source "${ESUBUNTU_HOME}/bootstrap.sh"
check-not-root || exit 1

shopt -s dotglob

print-status "Copy global Bash files..."
cd "${ES_CFG_CUSTOMIZE}/bash/global"
for file in *; do
    sudo cp -r "${file}" /root/
    sudo cp -r "${file}" /etc/skel/
    cp -r "${file}" ~
done
print-finish

print-status "Copy root Bash files..."
cd "${ES_CFG_CUSTOMIZE}/bash/root"
for file in *; do
    sudo cp -r "${file}" /root/
done
print-finish

if [[ -d "${ES_CFG_LOCAL}" ]]; then
    cd "${ES_CFG_LOCAL}"
    if [[ -d config/customize/bash ]]; then
        print-status "Copy local Bash files..."
        cd config/customize/bash
        for file in *; do
            cp -a "${file}" ~
        done
        print-finish
    fi
fi

exit 0
