#!/usr/bin/env bash
###############
## ES-Ubuntu ##
##           ##
## Config    ##
## Bash      ##
###############

# Strict mode
set -euo pipefail
IFS=$'\n\t'

source "${PROJECT_ROOT}/bootstrap.sh"
check-not-root || exit 1

shopt -s dotglob

print-status "Copy global Bash files..."
files=$(find "${ES_CUSTOMIZE_CFG}/bash/global" -mindepth 1 -maxdepth 1)
for file in ${files}; do
    sudo cp -r "${file}" /root/
    sudo cp -r "${file}" /etc/skel/
    cp -r "${file}" ~
done
print-finish

print-status "Copy root Bash files..."
files=$(find "${ES_CUSTOMIZE_CFG}/bash/root/" -mindepth 1 -maxdepth 1)
for file in ${files}; do
    sudo cp -r "${file}" /root/
done
print-finish

if [[ -d "${ES_CFG_LOCAL}/config/customize/bash" ]]; then
    print-status "Copy local Bash files..."
    files=$(find "${ES_CFG_LOCAL}/config/customize/bash" -mindepth 1 -maxdepth 1)
    for file in ${files}; do
        cp -r "${file}" ~
    done
    print-finish
fi

if [[ -e ~/.bash_history ]]; then
    print-status "Remove Bash history..."
    rm ~/.bash_history
    print-finish
fi

exit 0
