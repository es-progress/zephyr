#!/usr/bin/env bash
############
## Zephyr ##
##        ##
## Config ##
## fstrim ##
############

###############
## FUNCTIONS ##
###############

## Copy fstrim config file
##
## @param   $1  Global/Local
## @param   $2  Config dir
############################
_config() {
    local selector="${1:?"Selector missing"}"
    local cfg_dir="${2:?"Config dir missing"}"

    print-status "Config fstrim [${selector}]..."
    sudo mkdir -p /etc/systemd/system/fstrim.service.d
    find -L "${cfg_dir}" -mindepth 1 -maxdepth 1 -type f -exec sudo cp --no-preserve=mode,ownership {} /etc/systemd/system/fstrim.service.d/ \;
    print-finish
}

##################
## SCRIPT START ##
##################

# Strict mode
set -eufo pipefail
IFS=$'\n\t'

source "${PROJECT_ROOT}/bin/bootstrap.sh"
check-not-root

profile="${1:?"Profile missing"}"

# shellcheck disable=SC2310,SC2311
if dir=$(cfg-get "${profile}" system/fstrim/global.d); then
    _config global "${dir}"
fi
# shellcheck disable=SC2310,SC2311
if dir=$(cfg-get "${profile}" system/fstrim/local.d); then
    _config local "${dir}"
fi

print-status "Restart fstrim service..."
sudo systemctl daemon-reload
sudo systemctl restart fstrim.service
print-finish

exit 0
