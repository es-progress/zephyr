#!/usr/bin/env bash
#################
## Zephyr      ##
##             ##
## Config      ##
## User groups ##
#################

###############
## FUNCTIONS ##
###############

## Add user to groups
##
## @param   $1  Global/Local
## @param   $2  Config file
############################
_add-to-group() {
    local selector="${1:?"Selector missing"}"
    local cfg_file="${2:?"Config file missing"}"

    print-header Add user to groups "[${selector}]..."
    # shellcheck disable=SC2310,SC2311
    for group in $(cfg-read "${cfg_file}" groups); do
        sudo adduser "${USER}" "${group}"
    done
    print-finish
}

##################
## SCRIPT START ##
##################

# Strict mode
set -eufo pipefail
IFS=$'\n\t'

source "${PROJECT_ROOT}/bin/bootstrap.sh"
check-not-root

profile="${1:?"Profile missing"}"

# shellcheck disable=SC2310,SC2311
if file=$(cfg-get "${profile}" system/global.cfg); then
    _add-to-group global "${file}"
fi
# shellcheck disable=SC2310,SC2311
if file=$(cfg-get "${profile}" system/local.cfg); then
    _add-to-group local "${file}"
fi

exit 0
