#!/usr/bin/env bash
###############
## ES-Ubuntu ##
##           ##
## Config    ##
## Core dirs ##
###############

# Strict mode
set -euo pipefail
IFS=$'\n\t'

# Bootstrap
source "${ESUBUNTU_HOME}/bootstrap.sh"

# Check if not run as root
check-not-root || exit 1

# Add new dirs
if [[ -d "${ESUBUNTU_HOME}/local" ]]; then # Local dir exists
    cd "${ESUBUNTU_HOME}/local"

    if [[ -f config/customize/init/dir-core ]]; then # Local dirs file exists
        print-status "Create core dirs..."
        core_dirs=$(read-file-cfg config/customize/init/dir-core)
        while read -r line; do
            # eval line to let the shell expand tilde and env vars
            arg=$(eval echo "${line}")
            sudo mkdir -p "${arg}"
        done <<< "${core_dirs}"
        print-finish
    fi
fi

exit 0
