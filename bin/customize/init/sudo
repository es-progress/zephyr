#!/usr/bin/env bash
###############
## ES-Ubuntu ##
##           ##
## Config    ##
## sudoers   ##
###############

# Strict mode
set -euo pipefail
IFS=$'\n\t'

source "${PROJECT_ROOT}/bootstrap.sh"
check-not-root || exit 1

profile="${1:?"Profile missing"}"
if file=$(cfg-get "${profile}" init/sudoers); then
    print-status "Customize sudoers..."
    # Verify new file
    visudo -c -s "${file}" >/dev/null
    # Copy file
    sudo cp "${file}" /etc/sudoers.d/ESubuntu
    sudo chmod =0440 /etc/sudoers.d/ESubuntu
    # Verify full sudoers
    sudo visudo -c -s >/dev/null
    print-finish
fi

exit 0
