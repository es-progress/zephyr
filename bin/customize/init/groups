#!/usr/bin/env bash
#################
## ES-Ubuntu   ##
##             ##
## Config      ##
## User groups ##
#################

# Strict mode
set -euo pipefail
IFS=$'\n\t'

# Bootstrap
source "${ESUBUNTU_HOME}/bootstrap.sh"

# Check if not run as root
check-not-root || exit 1

print-header "Adding user to groups..."
sudo adduser "${USER}" users
sudo adduser "${USER}" www-data
print-finish

exit 0
