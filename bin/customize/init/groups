#!/usr/bin/env bash
#################
## ES-Ubuntu   ##
##             ##
## Config      ##
## User groups ##
#################

# Strict mode
set -euo pipefail
IFS=$'\n\t'

source "${ESUBUNTU_HOME}/bootstrap.sh"
check-not-root || exit 1

print-header "Adding user to groups..."
groups=$(read-file-cfg "${ES_CFG_CUSTOMIZE}/init/groups")
while read -r group_name; do
    sudo adduser "${USER}" "${group_name}"
done <<< "${groups}"
print-finish

exit 0
