#!/usr/bin/env bash
#################
## ES-Ubuntu   ##
##             ##
## Config      ##
## User groups ##
#################

# Strict mode
set -euo pipefail
IFS=$'\n\t'

source "${DIR_ESUBUNTU}/bootstrap.sh"
check-not-root || exit 1

print-header "Add user to groups..."
groups=$(read-file-cfg "${ES_CUSTOMIZE_CFG}/init/groups")
for group in ${groups}; do
    sudo adduser "${USER}" "${group}"
done
print-finish

exit 0
