#!/usr/bin/env bash
###############
## ES-Ubuntu ##
##           ##
## Config    ##
## Home dirs ##
###############

# Strict mode
set -euo pipefail
IFS=$'\n\t'

source "${ESUBUNTU_HOME}/bootstrap.sh"
check-not-root || exit 1

print-status "Remove def dirs..."
rm -rf ~/Desktop ~/Documents ~/Downloads ~/Music
rm -rf ~/Pictures ~/Public ~/Templates ~/Videos
print-finish

if [[ -d "${ES_LOCAL_CONFIG}" ]]; then
    cd "${ES_LOCAL_CONFIG}"
    if [[ -f config/customize/init/dir-home ]]; then
        print-status "Create home dirs..."
        home_dirs=$(read-file-cfg config/customize/init/dir-home)
        while read -r line; do
            # eval line to let the shell expand tilde and env vars
            arg=$(eval echo "${line}")
            mkdir -p "${arg}"
        done <<< "${home_dirs}"
        print-finish
    fi
fi

print-status "Setting permission on /home..."
sudo chown -R "${USER}:${USER}" ~
chmod -R o-rwx ~
print-finish

exit 0
