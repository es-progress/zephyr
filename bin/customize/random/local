#!/usr/bin/env bash
########################
## ES-Ubuntu          ##
##                    ##
## Config             ##
## Local post-install ##
########################

# Strict mode minus IFS
set -euo pipefail

source "${DIR_ESUBUNTU}/bootstrap.sh"
check-not-root || exit 1

# Run local post-install scripts
if [[ -d "${ES_CFG_LOCAL}/config/customize/post-install" ]]; then
    run-parts --exit-on-error "${ES_CFG_LOCAL}/config/customize/post-install"
fi

exit 0
