#!/usr/bin/env bash
########################
## ES-Ubuntu          ##
##                    ##
## Config             ##
## Local post-install ##
########################

# Strict mode
set -euo pipefail
IFS=$'\n\t'

source "${PROJECT_ROOT}/bootstrap.sh"
check-not-root || exit 1

# Run local post-install scripts
if [[ -d "${ES_CFG_LOCAL}/config/customize/post-install" ]]; then
    (
        cd "${ES_CFG_LOCAL}/config/customize/post-install"
        run-parts --exit-on-error .
    )
fi

exit 0
