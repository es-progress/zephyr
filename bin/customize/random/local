#!/usr/bin/env bash
########################
## ES-Ubuntu          ##
##                    ##
## Config             ##
## Local post-install ##
########################

# Strict mode minus IFS
set -euo pipefail

source "${ESUBUNTU_HOME}/bootstrap.sh"
check-not-root || exit 1

if [[ -d "${ES_CFG_LOCAL}" ]]; then
    cd "${ES_CFG_LOCAL}"
    if [[ -d config/customize/post-install ]]; then
        # Run local post-install scripts
        cd config/customize/post-install
        run-parts --exit-on-error .
    fi
fi

exit 0
