#!/usr/bin/env bash
###################
## Zephyr        ##
##               ##
## Config        ##
## Local scripts ##
###################

###############
## FUNCTIONS ##
###############

## Run local scripts
##
## @param   $1  Global/Local
## @param   $2  Config dir
############################
_run() {
    local selector="${1:?"Selector missing"}"
    local cfg_dir="${2:?"Config dir missing"}"

    print-header "Run local scripts [${selector}]..."
    (
        cd "${cfg_dir}"
        run-parts --exit-on-error --arg="${profile}" .
    )
    print-finish
}

##################
## SCRIPT START ##
##################

# Strict mode
set -eufo pipefail
IFS=$'\n\t'

source "${PROJECT_ROOT}/bin/bootstrap.sh"
check-not-root

profile="${1:?"Profile missing"}"

# shellcheck disable=SC2310,SC2311
if dir=$(cfg-get "${profile}" random/local/global.d); then
    _run global "${dir}"
fi
# shellcheck disable=SC2310,SC2311
if dir=$(cfg-get "${profile}" random/local/local.d); then
    _run local "${dir}"
fi

exit 0
