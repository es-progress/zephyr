#!/usr/bin/env bash
###############
## Zephyr    ##
##           ##
## Config    ##
## Bash goto ##
###############

###############
## FUNCTIONS ##
###############

## Register goto aliases
##
## @param   $1  Global/Local
## @param   $2  Config file
############################
_register() {
    local selector="${1:?"Selector missing"}"
    local cfg_file="${2:?"Config file missing"}"

    print-header "Register goto alias [${selector}]..."
    # shellcheck disable=SC2310,SC2311
    for line in $(cfg-read "${cfg_file}" goto); do
        IFS=$' \t' read -r alias dir <<< "${line}"

        # eval dir to let the shell expand tilde and env vars
        path=$(eval echo "${dir}")

        # Register only if not exists
        if ! goto -x "${alias}" >/dev/null 2>&1; then
            mkdir -p "${path}"
            goto -r "${alias}" "${path}"
        fi
    done
    print-finish
}

##################
## SCRIPT START ##
##################

# Strict mode
set -eufo pipefail
IFS=$'\n\t'

source "${PROJECT_ROOT}/bin/bootstrap.sh"
check-not-root

profile="${1:?"Profile missing"}"

if [[ -e ~/.bash/goto ]]; then
    # shellcheck disable=SC1090
    source ~/.bash/goto
else
    exit 0
fi
# Source bashrc for local envvars, config
# shellcheck disable=SC1090
[[ -r ~/.bashrc ]] && source ~/.bashrc

print-header "Cleanup aliases..."
goto -c
print-finish

# shellcheck disable=SC2310,SC2311
if file=$(cfg-get "${profile}" random/global.cfg); then
    _register global "${file}"
fi
# shellcheck disable=SC2310,SC2311
if file=$(cfg-get "${profile}" random/local.cfg); then
    _register local "${file}"
fi

exit 0
