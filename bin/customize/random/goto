#!/usr/bin/env bash
###############
## ES-Ubuntu ##
##           ##
## Config    ##
## Bash goto ##
###############

# Strict mode
set -euo pipefail
IFS=$'\n\t'

source "${PROJECT_ROOT}/bootstrap.sh"
check-not-root || exit 1

source ~/.bash/goto

print-header "Register global goto alias..."
gt_alias=$(read-file-cfg "${ES_CUSTOMIZE_CFG}/random/goto")
for line in ${gt_alias}; do
    IFS=$' \t' read -r alias dir <<< "${line}"
    # eval dir to let the shell expand tilde and env vars
    path=$(eval echo "${dir}")
    # Register only if not exists
    if ! goto -x "${alias}" >/dev/null 2>&1; then
        goto -r "${alias}" "${path}"
    fi
done
print-finish

if [[ -f "${ES_CFG_LOCAL}/config/customize/random/goto" ]]; then
    print-header "Register local goto alias..."
    gt_alias=$(read-file-cfg "${ES_CFG_LOCAL}/config/customize/random/goto")

    # Source env vars
    [[ -r ~/.bash/env_vars.local ]] && source ~/.bash/env_vars.local

    for line in ${gt_alias}; do
        IFS=$' \t' read -r alias dir <<< "${line}"
        # eval dir to let the shell expand tilde and env vars
        path=$(eval echo "${dir}")

        # Register only if not exists
        if ! goto -x "${alias}" >/dev/null 2>&1; then
            mkdir -p "${path}"
            goto -r "${alias}" "${path}"
        fi
    done
    print-finish
fi

print-header "Cleanup aliases..."
goto -c
print-finish

exit 0
