#!/usr/bin/env bash
###############
## ES-Ubuntu ##
##           ##
## Config    ##
## Bash goto ##
###############

# Strict mode minus IFS
set -euo pipefail

source "${ESUBUNTU_HOME}/bootstrap.sh"
check-not-root || exit 1

source ~/.bash/goto

print-header "Registering global goto alias..."
gt_alias=$(read-file-cfg "${ES_CFG_CUSTOMIZE}/random/goto")
while read -r alias dir; do
    # eval dir to let the shell expand tilde and env vars
    path=$(eval echo "${dir}")
    # Register only if not exists
    if ! goto -x "${alias}" >/dev/null 2>&1; then
        goto -r "${alias}" "${path}"
    fi
done <<< "${gt_alias}"
print-finish

if [[ -d "${ES_LOCAL_CONFIG}" ]]; then
    cd "${ES_LOCAL_CONFIG}"
    if [[ -f config/customize/random/goto ]]; then
        print-header "Registering local goto alias..."
        gt_alias=$(read-file-cfg config/customize/random/goto)

        # Source env vars
        [[ -r ~/.bash/env_vars.local ]] && source ~/.bash/env_vars.local

        while read -r alias dir; do
            # eval dir to let the shell expand tilde and env vars
            path=$(eval echo "${dir}")

            # Register only if not exists
            if ! goto -x "${alias}" >/dev/null 2>&1; then
                mkdir -p "${path}"
                goto -r "${alias}" "${path}"
            fi
        done <<< "${gt_alias}"
        print-finish
    fi
fi

exit 0
