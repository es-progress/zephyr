#!/usr/bin/env bash
###############
## ES-Ubuntu ##
##           ##
## Config    ##
## Bash goto ##
###############

# Strict mode
set -euo pipefail
IFS=$'\n\t'

source "${PROJECT_ROOT}/bootstrap.sh"
check-not-root || exit 1

profile="${1:?"Profile missing"}"

if [[ -e ~/.bash/goto ]]; then
    source ~/.bash/goto
else
    exit 0
fi

if file=$(cfg-get "${profile}" random/goto.global); then
    print-header "Register global goto alias..."
    gt_alias=$(cfg-read "${file}")
    for line in ${gt_alias}; do
        IFS=$' \t' read -r alias dir <<< "${line}"

        # eval dir to let the shell expand tilde and env vars
        path=$(eval echo "${dir}")

        # Register only if not exists
        if ! goto -x "${alias}" >/dev/null 2>&1; then
            goto -r "${alias}" "${path}"
        fi
    done
    print-finish
fi

if file=$(cfg-get "${profile}" random/goto.local); then
    print-header "Register local goto alias..."
    gt_alias=$(cfg-read "${file}")

    # Source env vars
    [[ -r ~/.bash/env_vars.local ]] && source ~/.bash/env_vars.local

    for line in ${gt_alias}; do
        IFS=$' \t' read -r alias dir <<< "${line}"

        # eval dir to let the shell expand tilde and env vars
        path=$(eval echo "${dir}")

        # Register only if not exists
        if ! goto -x "${alias}" >/dev/null 2>&1; then
            mkdir -p "${path}"
            goto -r "${alias}" "${path}"
        fi
    done
    print-finish
fi

print-header "Cleanup aliases..."
goto -c
print-finish

exit 0
