#!/usr/bin/env bash
###############
## ES-Ubuntu ##
##           ##
## Config    ##
## dig       ##
###############

# Strict mode
set -euo pipefail
IFS=$'\n\t'

source "${PROJECT_ROOT}/bootstrap.sh"
check-not-root || exit 1

profile="${1:?"Profile missing"}"
if file=$(cfg-get "${profile}" tools/dig); then
    print-status "Config dig..."
    cp "${file}" ~/.digrc
    print-finish
fi

exit 0
