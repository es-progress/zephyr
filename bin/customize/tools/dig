#!/usr/bin/env bash
############
## Zephyr ##
##        ##
## Config ##
## dig    ##
############

# Strict mode
set -eufo pipefail
IFS=$'\n\t'

source "${PROJECT_ROOT}/bin/bootstrap.sh"
check-not-root

profile="${1:?"Profile missing"}"
# shellcheck disable=SC2310,SC2311
if file=$(cfg-get "${profile}" tools/digrc); then
    print-status "Config dig..."
    cp --no-preserve=mode,ownership "${file}" ~/.digrc
    print-finish
fi

exit 0
