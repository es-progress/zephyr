#!/usr/bin/env bash
###############
## ES-Ubuntu ##
##           ##
## Config    ##
## nano      ##
###############

# Strict mode
set -euo pipefail
IFS=$'\n\t'

source "${DIR_ESUBUNTU}/bootstrap.sh"
check-not-root || exit 1

print-status "Copy nano syntax files..."
sudo cp "${ES_CUSTOMIZE_CFG}/nano/conf.nanorc" /usr/share/nano/conf.nanorc
sudo chmod =0644 /usr/share/nano/conf.nanorc
sudo cp "${ES_CUSTOMIZE_CFG}/nano/markdown.nanorc" /usr/share/nano/markdown.nanorc
sudo chmod =0644 /usr/share/nano/markdown.nanorc
print-finish

exit 0
