#!/usr/bin/env bash
############
## Zephyr ##
##        ##
## Config ##
## nano   ##
############

###############
## FUNCTIONS ##
###############

## Copy nano syntax file
##
## @param   $1  Global/Local
## @param   $2  Config dir
############################
_config() {
    local selector="${1:?"Selector missing"}"
    local cfg_dir="${2:?"Config dir missing"}"

    print-header "Copy nano syntax files [${selector}]..."
    find -L "${cfg_dir}" -mindepth 1 -maxdepth 1 -type f -exec sudo cp --no-preserve=mode,ownership {} /usr/share/nano/ \;
    print-finish
}

##################
## SCRIPT START ##
##################

# Strict mode
set -eufo pipefail
IFS=$'\n\t'

source "${PROJECT_ROOT}/bin/bootstrap.sh"
check-not-root

profile="${1:?"Profile missing"}"
# shellcheck disable=SC2310,SC2311
if dir=$(cfg-get "${profile}" tools/nano/global.d); then
    _config global "${dir}"
fi
# shellcheck disable=SC2310,SC2311
if dir=$(cfg-get "${profile}" tools/nano/local.d); then
    _config local "${dir}"
fi

exit 0
