#!/usr/bin/env bash
###############
## ES-Ubuntu ##
##           ##
## Config    ##
## nano      ##
###############

# Strict mode
set -euo pipefail
IFS=$'\n\t'

source "${PROJECT_ROOT}/bootstrap.sh"
check-not-root || exit 1

profile="${1:?"Profile missing"}"
if dir=$(cfg-get "${profile}" tools/nano); then
    print-status "Copy nano syntax files..."
    files=$(find "${dir}" -type f)
    for file in ${files}; do
        filename=$(basename "${file}")
        sudo cp "${file}" /usr/share/nano/
        sudo chmod =0644 "/usr/share/nano/${filename}"
    done
    print-finish
fi

exit 0
