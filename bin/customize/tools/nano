#!/usr/bin/env bash
###############
## ES-Ubuntu ##
##           ##
## Config    ##
## nano      ##
###############

# Strict mode
set -euo pipefail
IFS=$'\n\t'

source "${ESUBUNTU_HOME}/bootstrap.sh"
check-not-root || exit 1

print-status "Copy nano config files..."
sudo cp "${ES_CFG_CUSTOMIZE}/nano/nanorc" /etc/nanorc
sudo chmod =0644 /etc/nanorc
sudo cp "${ES_CFG_CUSTOMIZE}/nano/conf.nanorc" /usr/share/nano/conf.nanorc
sudo chmod =0644 /usr/share/nano/conf.nanorc
sudo cp "${ES_CFG_CUSTOMIZE}/nano/markdown.nanorc" /usr/share/nano/markdown.nanorc
sudo chmod =0644 /usr/share/nano/markdown.nanorc
print-finish

exit 0
