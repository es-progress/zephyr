#!/usr/bin/env bash
################
## ES-Ubuntu  ##
##            ##
## Packages   ##
## Github CLI ##
################

# gh
url="https://github.com/cli/cli/releases/download/v2.5.0/gh_2.5.0_linux_amd64.deb"
checksum="30acc72047b0172daccbed494c1f95f235a1ff694f516a227028c42283c917da"

# Strict mode
set -euo pipefail
IFS=$'\n\t'

source "${DIR_ESUBUNTU}/bootstrap.sh"
check-not-root || exit 1

print-header "Install github-cli..."
# Download deb
tmp_file=$(mktemp)
curl --progress-bar --location -o "${tmp_file}" --url "${url}"
hash=$(sha256sum "${tmp_file}" | cut -d" " -f1)
[[ "${hash}" != "${checksum}" ]] && error-exit "Bad checksum, exiting"
# Install
sudo dpkg -i "${tmp_file}"
print-finish

exit 0
