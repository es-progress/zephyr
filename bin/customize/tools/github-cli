#!/usr/bin/env bash
################
## ES-Ubuntu  ##
##            ##
## Packages   ##
## Github CLI ##
################

# gh
url="https://github.com/cli/cli/releases/download/v2.12.1/gh_2.12.1_linux_amd64.deb"
checksum="366a56e3e4c9f6708a1750ad854439cf8ca073e1a5cd95c733c1d9568bd8c757"

# Strict mode
set -euo pipefail
IFS=$'\n\t'

source "${DIR_ESUBUNTU}/bootstrap.sh"
check-not-root || exit 1

print-header "Install github-cli..."
# Download deb
tmp_file=$(mktemp)
curl --progress-bar --location -o "${tmp_file}" --url "${url}"
hash=$(sha256sum "${tmp_file}" | cut -d" " -f1)
[[ "${hash}" != "${checksum}" ]] && error-exit "Bad checksum, exiting"
# Install
sudo dpkg -i "${tmp_file}"
# Bash completion
gh completion -s bash | sudo tee /etc/bash_completion.d/github-cli >/dev/null
print-finish

exit 0
