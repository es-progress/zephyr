#!/usr/bin/env bash
################
## ES-Ubuntu  ##
##            ##
## Packages   ##
## Github CLI ##
################

# gh
url="https://github.com/cli/cli/releases/download/v2.5.2/gh_2.5.2_linux_amd64.deb"
checksum="4a8928c8681dd03cf0f9e89312c3d493cec5180e7b77035f0f2a03dd4d5e7a7e"

# Strict mode
set -euo pipefail
IFS=$'\n\t'

source "${DIR_ESUBUNTU}/bootstrap.sh"
check-not-root || exit 1

print-header "Install github-cli..."
# Download deb
tmp_file=$(mktemp)
curl --progress-bar --location -o "${tmp_file}" --url "${url}"
hash=$(sha256sum "${tmp_file}" | cut -d" " -f1)
[[ "${hash}" != "${checksum}" ]] && error-exit "Bad checksum, exiting"
# Install
sudo dpkg -i "${tmp_file}"
print-finish

exit 0
