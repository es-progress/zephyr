#!/usr/bin/env bash
#################
## ES-Ubuntu   ##
##             ##
## Config      ##
## pass-update ##
#################

# Strict mode
set -eufo pipefail
IFS=$'\n\t'

source "${PROJECT_ROOT}/bin/bootstrap.sh"
check-not-root

# Options
profile="${1:?"Profile missing"}"
version=

# Read config file, get options
# shellcheck disable=SC2310,SC2311
if file=$(cfg-get "${profile}" tools/global.cfg); then
    cfg-eval "${file}" pass-update
fi
# shellcheck disable=SC2310,SC2311
if file=$(cfg-get "${profile}" tools/local.cfg); then
    cfg-eval "${file}" pass-update
fi
[[ -z "${version}" ]] && exit 1

print-header "Install pass-update..."
tmp_dir=$(mktemp -d)
git clone https://github.com/roddhjav/pass-update.git "${tmp_dir}"
git -C "${tmp_dir}" checkout "${version}"
sudo make -C "${tmp_dir}" install
print-finish

exit 0
