#!/usr/bin/env bash
###############
## ES-Ubuntu ##
##           ##
## Config    ##
## git       ##
###############

# Strict mode minus IFS
set -euo pipefail

source "${DIR_ESUBUNTU}/bootstrap.sh"
check-not-root || exit 1

print-status "Global git config..."
configs=$(read-file-cfg "${ES_CUSTOMIZE_CFG}/git/configs")
while read -r cfg_loc cfg_name cfg_value; do
    if [[ "${cfg_loc}" == "system" ]]; then
        sudo git config "--${cfg_loc}" "$cfg_name" "$cfg_value"
    else
        git config "--${cfg_loc}" "$cfg_name" "$cfg_value"
    fi
done <<< "${configs}"
print-finish

if [[ -d "${ES_CFG_LOCAL}" ]]; then
    cd "${ES_CFG_LOCAL}"
    if [[ -f config/customize/git/configs ]]; then
        print-status "Local git config..."
        configs=$(read-file-cfg config/customize/git/configs)
        while read -r cfg_loc cfg_name cfg_value; do
            if [[ "${cfg_loc}" == "system" ]]; then
                sudo git config "--${cfg_loc}" "$cfg_name" "$cfg_value"
            else
                git config "--${cfg_loc}" "$cfg_name" "$cfg_value"
            fi
        done <<< "${configs}"
        print-finish
    fi
fi

exit 0
