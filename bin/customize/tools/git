#!/usr/bin/env bash
###############
## ES-Ubuntu ##
##           ##
## Config    ##
## git       ##
###############

# Strict mode
set -euo pipefail
IFS=$'\n\t'

source "${PROJECT_ROOT}/bootstrap.sh"
check-not-root || exit 1

profile="${1:?"Profile missing"}"

if file=$(cfg-get "${profile}" tools/git/config.global); then
    print-status "Global git config..."
    configs=$(cfg-read "${file}")
    for line in ${configs}; do
        IFS=$' \t' read -r cfg_loc cfg_name cfg_value <<< "${line}"
        if [[ "${cfg_loc}" == "system" ]]; then
            sudo git config "--${cfg_loc}" "${cfg_name}" "${cfg_value}"
        else
            git config "--${cfg_loc}" "${cfg_name}" "${cfg_value}"
        fi
    done
    print-finish
fi

if file=$(cfg-get "${profile}" tools/git/config.local); then
    print-status "Local git config..."
    configs=$(cfg-read "${file}")
    for line in ${configs}; do
        IFS=$' \t' read -r cfg_loc cfg_name cfg_value <<< "${line}"
        if [[ "${cfg_loc}" == "system" ]]; then
            sudo git config "--${cfg_loc}" "${cfg_name}" "${cfg_value}"
        else
            git config "--${cfg_loc}" "${cfg_name}" "${cfg_value}"
        fi
    done
    print-finish
fi

exit 0
