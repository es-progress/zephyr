#!/usr/bin/env bash
###############
## ES-Ubuntu ##
##           ##
## Config    ##
## nmap      ##
###############

# Strict mode
set -eufo pipefail
IFS=$'\n\t'

source "${PROJECT_ROOT}/bin/bootstrap.sh"
check-not-root || exit 1

profile="${1:?"Profile missing"}"

print-header "Install plugins..."
sudo snap connect nmap:network-control
print-finish

exit 0
