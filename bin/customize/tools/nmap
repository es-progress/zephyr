#!/usr/bin/env bash
############
## Zephyr ##
##        ##
## Config ##
## nmap   ##
############

# Strict mode
set -eufo pipefail
IFS=$'\n\t'

source "${PROJECT_ROOT}/bin/bootstrap.sh"
check-not-root

profile="${1:?"Profile missing"}"

install-snap nmap

print-status Install nmap plugins...
sudo snap connect nmap:network-control
print-finish

exit 0
