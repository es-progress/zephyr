#!/usr/bin/env bash
###############
## ES-Ubuntu ##
##           ##
## Config    ##
## Tomb      ##
###############

# Strict mode
set -euo pipefail
IFS=$'\n\t'

source "${PROJECT_ROOT}/bootstrap.sh"
check-not-root || exit 1

# Options
profile="${1:?"Profile missing"}"
version=
url=
checksum=

# Read config file, get options
if file=$(cfg-get "${profile}" tools/tomb); then
    configs=$(cfg-read "${file}")
    for line in ${configs}; do
        eval "${line}"
    done
fi
[[ -z "${version}" ]] && exit 1
[[ -z "${url}" ]] && exit 1
[[ -z "${checksum}" ]] && exit 1

print-header "Install Tomb..."
# Download tar
tmp_file=$(mktemp)
curl --progress-bar -o "${tmp_file}" --url "${url}"
hash=$(sha256sum "${tmp_file}" | cut -d" " -f1)
[[ "${hash}" != "${checksum}" ]] && error-exit "Bad checksum, exiting"
# Unpack archive
tmp_dir=$(mktemp -d)
tar -C "${tmp_dir}" -xf "${tmp_file}"
# Install
sudo make -C "${tmp_dir}/Tomb-${version}" install
print-finish

exit 0
