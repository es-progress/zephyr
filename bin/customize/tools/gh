#!/usr/bin/env bash
################
## ES-Ubuntu  ##
##            ##
## Config     ##
## Github CLI ##
################

# Strict mode
set -eufo pipefail
IFS=$'\n\t'

source "${PROJECT_ROOT}/bin/bootstrap.sh"
check-not-root

# Options
profile="${1:?"Profile missing"}"
url=
checksum=

# Read config file, get options
# shellcheck disable=SC2310,SC2311
if file=$(cfg-get "${profile}" tools/global.cfg); then
    cfg-eval "${file}" gh
fi
# shellcheck disable=SC2310,SC2311
if file=$(cfg-get "${profile}" tools/local.cfg); then
    cfg-eval "${file}" gh
fi
[[ -z "${url}" ]] && exit 1
[[ -z "${checksum}" ]] && exit 1

print-header "Install github-cli..."
# Download deb
tmp_file=$(mktemp)
curl --progress-bar --location -o "${tmp_file}" --url "${url}"
hash=$(sha256sum "${tmp_file}" | cut -d" " -f1)
[[ "${hash}" != "${checksum}" ]] && error-exit "Bad checksum, exiting"
# Install
sudo dpkg -i "${tmp_file}"
# Bash completion
gh completion -s bash | sudo tee /etc/bash_completion.d/github-cli >/dev/null
print-finish

exit 0
