#!/usr/bin/env bash
###############
## ES-Ubuntu ##
##           ##
## Config    ##
## SSH       ##
###############

# Strict mode
set -euo pipefail
IFS=$'\n\t'

source "${DIR_ESUBUNTU}/bootstrap.sh"
check-not-root || exit 1

print-status "Copy SSH config files..."
mkdir -p ~/.ssh
cp -a "${ES_CUSTOMIZE_CFG}"/ssh/* ~/.ssh/
print-finish

if [[ -d "${ES_CFG_LOCAL}/config/customize/ssh" ]]; then
    print-status "Copy local SSH config files..."
    for file in "${ES_CFG_LOCAL}"/config/customize/ssh/*; do
        cp -a "${file}" ~/.ssh/
    done
    print-finish
fi

exit 0
