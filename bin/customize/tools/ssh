#!/usr/bin/env bash
###############
## ES-Ubuntu ##
##           ##
## Config    ##
## SSH       ##
###############

# Strict mode
set -euo pipefail
IFS=$'\n\t'

source "${ESUBUNTU_HOME}/bootstrap.sh"
check-not-root || exit 1

print-status "Copy SSH config files..."
mkdir -p ~/.ssh
cp -a "${ES_CFG_CUSTOMIZE}"/ssh/* ~/.ssh/
print-finish

if [[ -d "${ES_LOCAL_CONFIG}" ]]; then
    cd "${ES_LOCAL_CONFIG}"
    if [[ -d config/customize/ssh ]]; then
        print-status "Copy local SSH config files..."
        cd config/customize/ssh
        for file in *; do
            cp -a "${file}" ~/.ssh/
        done
        print-finish
    fi
fi

exit 0
