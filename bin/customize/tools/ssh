#!/usr/bin/env bash
################
## ES-Ubuntu  ##
##            ##
## Config     ##
## SSH client ##
################

# Strict mode
set -euo pipefail
IFS=$'\n\t'

source "${PROJECT_ROOT}/bootstrap.sh"
check-not-root || exit 1

profile="${1:?"Profile missing"}"

if dir=$(cfg-get "${profile}" tools/ssh/global); then
    print-status "Copy SSH client global config files..."
    mkdir -p ~/.ssh
    files=$(find "${dir}" -mindepth 1 -maxdepth 1)
    for file in ${files}; do
        cp -r "${file}" ~/.ssh/
    done
    print-finish
fi

if dir=$(cfg-get "${profile}" tools/ssh/local); then
    print-status "Copy SSH client local config files..."
    mkdir -p ~/.ssh
    files=$(find "${dir}" -mindepth 1 -maxdepth 1)
    for file in ${files}; do
        cp -r "${file}" ~/.ssh/
    done
    print-finish
fi

if file=$(cfg-get "${profile}" tools/ssh/known_hosts); then
    print-status "Setup known hosts..."
    mkdir -p ~/.ssh
    touch ~/.ssh/known_hosts
    host_ca=$(cfg-read "${file}")
    for line in ${host_ca}; do
        if ! grep -F -qs "${line}" ~/.ssh/known_hosts; then
            echo "${line}" >> ~/.ssh/known_hosts
        fi
    done
    print-finish
fi

exit 0
