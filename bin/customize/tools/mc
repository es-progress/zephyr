#!/usr/bin/env bash
###############
## ES-Ubuntu ##
##           ##
## Config    ##
## mc        ##
###############

# Strict mode
set -euo pipefail
IFS=$'\n\t'

source "${PROJECT_ROOT}/bootstrap.sh"
check-not-root || exit 1

print-status "Copy mc config files..."
sudo mkdir -p /root/.config/mc
mkdir -p ~/.config/mc
files=$(find "${ES_CUSTOMIZE_CFG}/mc" -type f)
for file in ${files}; do
    sudo cp "${file}" /root/.config/mc/
    cp "${file}" ~/.config/mc
done
print-finish

exit 0
