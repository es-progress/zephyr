#!/usr/bin/env bash
###############
## ES-Ubuntu ##
##           ##
## Config    ##
## mc        ##
###############

# Strict mode
set -euo pipefail
IFS=$'\n\t'

source "${ESUBUNTU_HOME}/bootstrap.sh"
check-not-root || exit 1

print-status "Copy mc config files..."
sudo mkdir -p /root/.config/mc
mkdir -p ~/.config/mc
sudo cp "${ES_CFG_CUSTOMIZE}"/mc/* /root/.config/mc/
cp "${ES_CFG_CUSTOMIZE}"/mc/* ~/.config/mc
print-finish

exit 0
