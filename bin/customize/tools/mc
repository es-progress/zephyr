#!/usr/bin/env bash
############
## Zephyr ##
##        ##
## Config ##
## mc     ##
############

###############
## FUNCTIONS ##
###############

## Copy mc config file
##
## @param   $1  Global/Local
## @param   $2  Config dir
############################
_config() {
    local selector="${1:?"Selector missing"}"
    local cfg_dir="${2:?"Config dir missing"}"

    print-status "Config mc [${selector}]..."
    sudo mkdir -p /root/.config/mc
    mkdir -p ~/.config/mc
    find -L "${cfg_dir}" -mindepth 1 -maxdepth 1 -type f -exec sudo cp --no-preserve=mode,ownership {} /root/.config/mc/ \;
    find -L "${cfg_dir}" -mindepth 1 -maxdepth 1 -type f -exec cp --no-preserve=mode,ownership {} ~/.config/mc/ \;
    print-finish
}

##################
## SCRIPT START ##
##################

# Strict mode
set -eufo pipefail
IFS=$'\n\t'

source "${PROJECT_ROOT}/bin/bootstrap.sh"
check-not-root

profile="${1:?"Profile missing"}"

install-apt mc

# shellcheck disable=SC2310,SC2311
if dir=$(cfg-get "${profile}" tools/mc/global.d); then
    _config global "${dir}"
fi
# shellcheck disable=SC2310,SC2311
if dir=$(cfg-get "${profile}" tools/mc/local.d); then
    _config local "${dir}"
fi

exit 0
