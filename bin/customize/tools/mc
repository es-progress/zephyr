#!/usr/bin/env bash
###############
## ES-Ubuntu ##
##           ##
## Config    ##
## mc        ##
###############

# Strict mode
set -euo pipefail
IFS=$'\n\t'

source "${PROJECT_ROOT}/bootstrap.sh"
check-not-root || exit 1

profile="${1:?"Profile missing"}"
if dir=$(cfg-get "${profile}" tools/mc); then
    print-status "Copy mc config files..."
    sudo cp -r "${dir}" /root/.config/
    cp -r "${dir}" ~/.config/
    print-finish
fi

exit 0
