#!/usr/bin/env bash
###############
## ES-Ubuntu ##
##           ##
## Config    ##
## gnupg     ##
###############

# Strict mode
set -euo pipefail
IFS=$'\n\t'

# Bootstrap
source "${ESUBUNTU_HOME}/bootstrap.sh"

# Check if not run as root
check-not-root || exit 1

print-status "Copy gnupg config files..."
mkdir -p ~/.gnupg
cp "${ESUBUNTU_HOME}/custom/gpg/gpg-agent.conf" ~/.gnupg/
print-finish

exit 0
