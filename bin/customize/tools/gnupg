#!/usr/bin/env bash
###############
## ES-Ubuntu ##
##           ##
## Config    ##
## gnupg     ##
###############

# Strict mode
set -euo pipefail
IFS=$'\n\t'

source "${DIR_ESUBUNTU}/bootstrap.sh"
check-not-root || exit 1

print-status "Copy gnupg config files..."
mkdir -p ~/.gnupg
cp "${ES_CUSTOMIZE_CFG}/gpg/gpg-agent.conf" ~/.gnupg/
chmod go-rwx -R ~/.gnupg/
print-finish

exit 0
